<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ Izin dasar -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- ✅ Dukungan Android 13+ (akses foto/media) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- ✅ WRITE_EXTERNAL_STORAGE deprecated sejak Android 10 -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LSMSawit_ProjekMAP">

        <!-- ✅ Kunci Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- ✅ Halaman utama user -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar" />

        <!-- ✅ Halaman Admin -->
        <activity
            android:name=".ui.admin.AdminActivity"
            android:exported="false"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar" />

        <!-- ✅ Halaman Login -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar.Fullscreen"
            android:exported="false" />

        <!-- ✅ Halaman Register (launcher) -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar.Fullscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Halaman Setting Akun -->
        <activity
            android:name=".AccountSettingActivity"
            android:exported="false"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar" />

        <!-- ✅ Halaman Peta -->
        <activity
            android:name=".MapsActivity"
            android:exported="false" />

        <!-- ✅ Halaman Notifikasi -->
        <activity
            android:name=".NotifikasiActivity"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar" />

        <!-- ✅ Halaman List Petani -->
        <activity
            android:name=".ui.admin.PetaniListActivity"
            android:theme="@style/Theme.LSMSawit_ProjekMAP.NoActionBar" />

        <!-- ✅ FileProvider (penting untuk kamera & upload foto) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
