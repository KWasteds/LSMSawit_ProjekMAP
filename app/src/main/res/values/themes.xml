<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema utama aplikasi -->
    <style name="Theme.LSMSawit_ProjekMAP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Warna utama brand -->
        <item name="colorPrimary">@color/green_10</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna sekunder -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Kustomisasi tambahan -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Tema tanpa ActionBar (untuk MainActivity) -->
    <style name="Theme.LSMSawit_ProjekMAP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/green_10</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <!-- Tema overlay untuk AppBar -->
    <style name="Theme.LSMSawit_ProjekMAP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Tema overlay untuk Popup -->
    <style name="Theme.LSMSawit_ProjekMAP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Tema fullscreen (untuk Login & Register) -->
    <style name="Theme.LSMSawit_ProjekMAP.NoActionBar.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Hilangkan status bar & action bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Warna transparan agar tidak muncul bar hijau -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Biar teks status bar tetap terlihat -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Gunakan warna utama yang sama agar tetap konsisten -->
        <item name="colorPrimary">@color/green_10</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>

    <!-- Logo & Loading Screen -->
    <style name="Theme.LSMSawit_ProjekMAP.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_app</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.LSMSawit_ProjekMAP</item>
    </style>

</resources>
