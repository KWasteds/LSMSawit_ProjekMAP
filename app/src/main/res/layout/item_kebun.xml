<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar Kebun -->
        <ImageView
            android:id="@+id/imgKebun"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            android:contentDescription="Foto Kebun" />

        <!-- Indikator Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Pending"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_status_pending"
            android:layout_gravity="start" />

        <!-- Bagian teks info kebun -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvNamaKebun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kebun"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/tvIdKebun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: PT-KLT-01-A-0101"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi: -6.2341, 106.5567"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvInfoTambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas: 2.5 ha â€¢ Tanam: 2010"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvFotoTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto diambil: -"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Baris tombol edit di pojok kanan -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit"
                android:clickable="true"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="?android:attr/textColorSecondary" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
