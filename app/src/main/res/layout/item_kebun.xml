<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Gambar -->
        <ImageView
            android:id="@+id/imgKebun"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="Foto Kebun" />

        <!-- Bagian teks -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Nama & Status -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNamaKebun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nama Kebun"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorPrimary" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_pending"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="Pending"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ID -->
            <TextView
                android:id="@+id/tvIdKebun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: ..."
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp" />

            <!-- Lokasi -->
            <TextView
                android:id="@+id/tvLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi: ..."
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="2dp" />

            <!-- Info Tambahan -->
            <TextView
                android:id="@+id/tvInfoTambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas: ... ha â€¢ Tanam: ..."
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp" />

            <!-- Foto Timestamp -->
            <TextView
                android:id="@+id/tvFotoTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto diambil: ..."
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="4dp"/>

            <!-- Tombol Lokasi & Edit -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/btnLocation"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Buka Lokasi"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#808080" />

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="6dp"
                    android:layout_marginStart="6dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Kebun"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#808080" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
