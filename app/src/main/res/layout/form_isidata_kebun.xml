<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollForm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isi Data Kebun"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/etNamaKebun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Kebun"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etIdKebun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Kebun (mis: PT-KLT-01-A-0101)"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etLokasi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Lokasi (lat,lng) atau kosong untuk isi manual"
                android:inputType="text"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnAmbilLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Ambil Lokasi"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etLuas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Luas Lahan (hektar)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etTahunTanam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tahun Tanam (contoh: 2015)"
            android:inputType="number"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Simpan"/>

            <ProgressBar
                android:id="@+id/progressSaving"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Tombol hapus hanya muncul jika mode edit -->
        <Button
            android:id="@+id/btnHapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus Kebun"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>
