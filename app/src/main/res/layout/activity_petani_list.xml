<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutPetani"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ✅ BAGIAN UTAMA (CONTENT) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_petani"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="@android:color/white"
            android:title="" />

        <TextView
            android:id="@+id/tvEmptyPetani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memuat..."
            android:padding="16dp"
            android:visibility="gone"
            android:textAlignment="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPetani"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ProgressBar
            android:id="@+id/progressBarPetani"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <!-- ✅ SIDEBAR (NavigationView) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewPetani"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Spacer agar tombol logout tetap di bawah -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- ✅ Tombol Logout -->
            <Button
                android:id="@+id/btnLogoutPetani"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Logout"
                android:background="#1C352D"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_logout"
                android:drawablePadding="8dp"
                android:textAllCaps="false"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:minHeight="0dp"
                android:elevation="0dp"
                android:stateListAnimator="@null"
                android:textSize="18sp"/>
        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
