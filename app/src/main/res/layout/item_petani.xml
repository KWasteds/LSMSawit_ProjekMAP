<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgPetaniProfile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_account_circle"
        android:contentDescription="Foto Petani"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPetaniName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>

        <TextView
            android:id="@+id/tvPetaniContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telp: "/>

        <TextView
            android:id="@+id/tvPetaniEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "/>

        <TextView
            android:id="@+id/tvPetaniAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat: "/>

        <TextView
            android:id="@+id/tvPetaniKebunCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah kebun: 0"/>
    </LinearLayout>

</LinearLayout>
